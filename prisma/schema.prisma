// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Usa a porta 6543 (Pooler) para o site rodar r√°pido
  directUrl = env("DIRECT_URL")    // Usa a porta 5432 (Direta) para o npx prisma db push funcionar
}

model Chat {
  id            String    @id @default(cuid())
  telegramId    String    @unique
  customerName  String?
  department    String?   @default("GERAL")
  urgencyLevel  Int       @default(1) 
  messages      Message[]
  createdAt     DateTime  @default(now())
  lastMessageAt DateTime  @default(now())
  status        String    @default("OPEN")
}

model Message {
  id        String   @id @default(cuid())
  content   String?  
  sender    String   
  type      String   @default("TEXT") 
  mediaUrl  String?  
  isRead    Boolean  @default(false)
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  role      String   @default("AGENT")    
  department String  @default("GERAL")    
  createdAt DateTime @default(now())
}